@model Abuyukkilic.Mvc.WebUI.Models.Cart

@{
    ViewBag.Title = "title";

}


<div class="container pb-5" id="product-details">
    <div class="row">
        <div class="col-md-12">
            <h2>Alışveriş Sepeti</h2>
            <hr />
        </div>
        @if (Model.CartLines.Count > 0)
        {
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th></th>
                        <th>Miktar</th>
                        <th>Ürün Adı</th>
                        <th>Ücret</th>
                        <th>Toplam Ücret</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.CartLines)
                    {
                        <tr>
                            <td>
                                <img src="/Upload/@item.Product.Image" width="50" />
                            </td>
                            <td>@item.Quantity</td>
                            <td>@item.Product.Name</td>
                            <td>@item.Product.Price</td>
                            <td>@((item.Product.Price * item.Quantity).ToString("c")) </td>
                            <td>
                                @using (Html.BeginForm("RemoveFromCart", "Cart"))
                                {
                                    @Html.Hidden("Id", item.Product.Id)
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        <i class="far fa-trash-alt"></i>
                                        Sepetten Çıkart
                                    </button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="5"></td>
                        <td>@Model.Total().ToString("c")</td>
                    </tr>
                </tfoot>
            </table>
            <div class="text-center col-md-12">

                <a href="/Home/List" class="btn btn-primary">
                    <i class="fa fa-angle-double-left"></i>
                    Alışverişe Devam Et
                </a>
                <a href="/Cart/Checkout" class="btn btn-primary">
                    <i class="fa fa-check"></i>
                    Alışverişi Tamamla
                </a>
            </div>
        }
        else
        {
            <div class="alert alert-warning" role="alert">
                <i class="fas fa-exclamation-triangle"></i>
                Alışveriş Sepetinizde Ürün Bulunmamaktadır
            </div>

        }
    </div>
</div>
