@using Abuyukkilic.Mvc.WebUI.Entity
@model Abuyukkilic.Mvc.WebUI.Models.OrderDetailsModel

@{
    ViewBag.Title = "title";

}

<div class="container">
    <div class="row ">
        <div class="col-md-12">
            <h2>Sipariş Detay Bilgileri</h2>
            <hr />

            <dl class="row">

                <dt class="col-sm-3">Order State</dt>
                <dd class="col-sm-9">
                    @if (Model.OrderState == EnumOrderState.Waiting)
                    {
                        <span class="badge badge-danger"> @Model.OrderState</span>
                    }
                    else if (Model.OrderState == EnumOrderState.Completed)
                    {
                        <span class="badge badge-success"> @Model.OrderState</span>
                    }

                </dd>

                <dt class="col-sm-3">Order Id</dt>
                <dd class="col-sm-9">@Model.OrderId</dd>

                <dt class="col-sm-3">Order Number</dt>
                <dd class="col-sm-9">@Model.OrderNumber</dd>


                <dt class="col-sm-3">Total</dt>
                <dd class="col-sm-9"> <i class="fa fa-try"></i>@Model.Total</dd>

                <dt class="col-sm-3">Order Date</dt>
                <dd class="col-sm-9">@Model.OrderDate</dd>



                <dt class="col-sm-3">Order Number</dt>
                <dd class="col-sm-9">@Model.OrderNumber</dd>


                <dt class="col-sm-3">Adres</dt>
                <dd class="col-sm-9">
                    @Model.AdresBasligi
                    <hr />
                    @Model.Sehir -
                    @Model.Semt -
                    @Model.Mahalle <br />
                    @Model.PostaKodu <br />
                </dd>

                <dt class="col-sm-3">Products</dt>
                <dd class="col-sm-9">

                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th style="width: 30%">Product Name</th>
                                <th>Quantity</th>
                                <th>Price</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Orderlines)
                            {
                                <tr>
                                    <td><img src="/Upload/@item.Image" width="100px" /></td>
                                    <td>@item.ProductName</td>
                                    <td>@item.Quantity</td>
                                    <td> <i class="fa fa-try"></i>@item.Price</td>
                                    <td><a href="/Home/Details/@item.ProductId" class="btn btn-primary btn-sm" target="_blank"><i class="fa fa-angle-double-right"></i>Product Details</a></td>

                                </tr>

                            }
                        </tbody>
                    </table>

                </dd>
            </dl>

        </div>
    </div>
</div>
