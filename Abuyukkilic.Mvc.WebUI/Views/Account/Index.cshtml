@using Abuyukkilic.Mvc.WebUI.Models
@model IEnumerable<UserOrderModel>
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row ">
        <div class="col-md-12">
            <h2>Sipariş Bilgileriniz</h2>
            <hr />

            <table class="table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Order Number</th>
                        <th>Order Date</th>
                        <th>Total</th>
                        <th>Sipariş Durumu</th>
                        <th>Sipariş Detayı</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in @Model)
                    {
                        <tr>
                            <td>@item.OrderNumber</td>
                            <td>@item.OrderDate.ToShortDateString()</td>
                            <td> <i class="fa fa-try"></i>@item.Total</td>
                            <td>@item.OrderState</td>
                            <td>
                                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary" })
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
